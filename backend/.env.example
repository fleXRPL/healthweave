# ============================================
# HealthWeave Backend Environment Configuration
# ============================================
# Copy this file to .env.development for local development

# --------------------------------------------
# Server Configuration
# --------------------------------------------
NODE_ENV=development
PORT=4000
HOST=localhost

# --------------------------------------------
# AWS Configuration
# --------------------------------------------
AWS_REGION=us-east-1
AWS_ENDPOINT=http://localhost:4566

# --------------------------------------------
# AI/LLM Configuration
# --------------------------------------------
BEDROCK_MODEL_ID=mistral
# ANTHROPIC_API_KEY=sk-ant-xxxxx

# --------------------------------------------
# Storage Configuration (S3)
# --------------------------------------------
S3_BUCKET_NAME=healthweave-patient-data
S3_BUCKET_REGION=us-east-1

# --------------------------------------------
# Database Configuration (DynamoDB)
# --------------------------------------------
DYNAMODB_TABLE_REPORTS=healthweave-reports
DYNAMODB_TABLE_AUDIT=healthweave-audit-logs

# --------------------------------------------
# Authentication (Cognito) - Production Only
# --------------------------------------------
# COGNITO_USER_POOL_ID=us-east-1_xxxxxxxx
# COGNITO_CLIENT_ID=xxxxxxxxxxxxxxxxxxxxxxxxxx

# --------------------------------------------
# Security Configuration
# --------------------------------------------
JWT_SECRET=
ENCRYPTION_KEY=

# --------------------------------------------
# CORS Configuration
# --------------------------------------------
CORS_ORIGIN=http://localhost:3000

# --------------------------------------------
# Logging Configuration
# --------------------------------------------
LOG_LEVEL=debug
