# Environment
NODE_ENV=development

# Server
PORT=4000
HOST=localhost

# AWS Configuration
AWS_REGION=us-east-1
AWS_ENDPOINT=http://localhost:4566  # LocalStack endpoint (remove for production)

# AWS Bedrock
BEDROCK_MODEL_ID=mistral  # For LocalStack. Use anthropic.claude-3-sonnet-20240229-v1:0 for production

# S3 Configuration
S3_BUCKET_NAME=healthweave-patient-data
S3_BUCKET_REGION=us-east-1

# DynamoDB
DYNAMODB_TABLE_REPORTS=healthweave-reports
DYNAMODB_TABLE_AUDIT=healthweave-audit-logs

# Cognito (for production)
COGNITO_USER_POOL_ID=
COGNITO_CLIENT_ID=

# Security
JWT_SECRET=your-super-secret-jwt-key-change-in-production
ENCRYPTION_KEY=your-32-character-encryption-key

# CORS
CORS_ORIGIN=http://localhost:3000

# Logging
LOG_LEVEL=debug
